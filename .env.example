TELEGRAM_STAFF_CHAT_LINK_SECRET_PEPPER=please-set-when-enabled
TELEGRAM_REQUIRE_STAFF_CHAT_ADMIN=true

DB_JDBC_URL=jdbc:postgresql://localhost:5432/hookah
