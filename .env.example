APP_ENV=dev
APP_VERSION=dev
APP_HTTP_PORT=8080

# Оставьте пустым по умолчанию; для локального прокси dev-сервера вне Docker можно указать http://localhost:5173
MINIAPP_DEV_SERVER_URL=
